{
   "description" : "Translate the current tab to Pig-Elvish",
   "name" : "Pig-Elvish",
   "permissions" : [
      "activeTab",
      "contextMenus"
   ],
   "browser_action": {
     "browser_style": true,
     "default_icon": {
       "19": "icons/elf.svg",
       "38": "icons/elf.svg"
     },
     "default_title": "Pig-elvish this page"
   },
   "web_accessible_resources" : [
      "icons/elf_attribution"
   ],
   "version" : "1.1.3",
   "homepage_url" : "https://github.com/jbaber/pig-elvish-extension",
   "manifest_version" : 2,
   "background" : {
      "scripts" : [
         "background.js"
      ],
      "persistent": false
   },
   "icons" : {
      "96" : "icons/elf.svg",
      "48" : "icons/elf.svg"
   }
}
